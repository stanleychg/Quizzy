<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizzy_make"
    android:orientation="vertical"
    android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8" >

        <TextView
            android:id="@+id/makeQuizTitle"
            style="@style/header_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/makeAddWord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/add_index_card_small" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:background="@color/BLACK" >

        <ImageView
            android:id="@+id/makeIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_quiz" />

        <TextView
            android:id="@+id/makeWordCount"
            style="@style/header_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="# of Words"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/WORD_2" />

        <ListView
            android:id="@+id/makeWordList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:cacheColorHint="@color/WORD_LIST" >

        </ListView>

    </FrameLayout>

</LinearLayout>